<Window x:Class="MapEditor.MapTypeDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MapTypeDialog" Height="300" Width="300">
    <Grid>
		<StackPanel Orientation="Vertical">
			<StackPanel Orientation="Horizontal">
				<TextBlock Text="Map Type: "/>
				<ComboBox x:Name="picker">
					<ComboBoxItem>Sidescrolling</ComboBoxItem>
					<ComboBoxItem>Overworld</ComboBoxItem>
				</ComboBox>
			</StackPanel>
			
			<StackPanel Orientation="Horizontal">
				<Button x:Name="okButton">OK</Button>
				<Button x:Name="cancelButton">Cancel</Button>
			</StackPanel>
		</StackPanel>
	</Grid>
</Window>
