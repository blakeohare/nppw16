class SeedAutomation {
	constructor(sprite) {
		this.counter = 0;
		this.sprite = sprite;
		this.used = false;
	}
		
	function doStuff(scene) {
		p = scene.player;
		dx = p.x - self.sprite.x;
		dy = p.y - self.sprite.y;
		if (dx * dx + dy * dy < 10 ** 2 && !self.used) {
			this.sprite.dead = true;
			this.used = true;
			scene.special[0].seedsLeft--;
			playNoise('raise_health');
		}
	}
}
