function SPRITE_renderPoof(sprite, scene, offsetX, offsetY, arc) {
	isBig = sprite.automation.isBig;
	left = sprite.x + offsetX - 8;
	top = sprite.y + offsetY - 8;
	
	c = sprite.automation.counter;
	if (c <= 3) {
		num = '1';
	} else if (c <= 6) {
		num = '2';
	} else if (c <= 9) {
		num = '3';
	} else {
		return;
	}
	
	if (isBig) {
		top -= 16;
		img = IMAGES.get('sprites/large_poof_' + num + '.png');
	} else {
		img = IMAGES.get('sprites/small_poof_' + num + '.png');
	}
	
	$gfx_blit_image(img, left, top);
}
