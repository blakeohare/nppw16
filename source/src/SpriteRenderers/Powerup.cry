function SPRITE_renderPowerup(sprite, scene, offsetX, offsetY, arc) {
	
	if (sprite.automation.visible) {
		left = sprite.x + offsetX - 8;
		top = sprite.y + offsetY - 8;
		type = sprite.powerupInfo.type;
		if (type == '1up') {
			path = 'sprites/1up.png';
		} else if (type == 'life_small') {
			path = 'sprites/life_small.png';
		} else if (type == 'life_big') {
			path = 'sprites/life_big.png';
		}
		
		$gfx_blit_image(IMAGES.get(path), left, top);
	}
}
