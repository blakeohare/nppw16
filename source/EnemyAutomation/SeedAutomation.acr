class SeedAutomation {
	field counter = 0;
	field sprite;
	field used = false;

	constructor(sprite) {
		this.sprite = sprite;
	}
		
	function doStuff(scene) {
		p = scene.player;
		dx = p.x - this.sprite.x;
		dy = p.y - this.sprite.y;
		if (dx * dx + dy * dy < 10 ** 2 && !this.used) {
			this.sprite.dead = true;
			this.used = true;
			scene.special[0].seedsLeft--;
			playNoise('raise_health');
		}
	}
}
